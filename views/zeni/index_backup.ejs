        <h1>New images</h1>
<div class="container">
    <% Pic.reverse().forEach(function(pic){ %>
          <div class = "box">
            
                  <img src=<%= pic.image %> >
                  <div class="overlay">
                  <h2 style="text-align: center;"><%= pic.name %></h2>
                  </div>
                  <div class="Like">
                <a class="btn btn-outline-primary" href="/zeni/<%= pic._id %>" role="button">More detail...</a>
                <i class="far fa-thumbs-up"></i> : <%=pic.number_like %>
        </div>
                <form action = '/zeni/zeni/report/<%= pic.id %>'  method="POST">
                    <button  onclick="myFunction()" class="btn btn-xs btn-danger"><i class="far fa-flag"></i>Report</button>
                  </form>
</a>
</div>
          
           
      <% }); %>
  

 </div>  


       

