    <script type="text/javascript">
      
      // width to resize large images to
      var maxWidth=500;
  
      // height to resize large images to
      var maxHeight=500;
  
      // ระบุนามสกุลของไฟล์รูปภาพที่อนุญาติให้อัพโหลด
      var fileTypes=["bmp","gif","png","jpg","jpeg"];
  
      // the id of the preview image tag
      var outImage="previewField";
  
      // URL ของไฟล์ภาพ กรณีเลือก Upload ไฟล์ผิดรูปแบบ
      var defaultPic="https://steamuserimages-a.akamaihd.net/ugc/911295273329754208/79105D9E68D23FF4DF8959F3F96A9C7A344E81E5/";
  
      /***** DO NOT EDIT BELOW *****/
      function preview(what){
      var source=what.value;
      var ext=source.substring(source.lastIndexOf(".")+1,source.length).toLowerCase();
      for (var i=0; i<fileTypes.length; i++){
      if (fileTypes[i]==ext){
      break;
      }
      }
      globalPic=new Image();
      if (i<fileTypes.length){
       
      //Obtenemos los datos de la imagen de firefox
      try{
      globalPic.src=what.files[0].getAsDataURL();
      }catch(err){
      globalPic.src=source;
      }
      }else {
      globalPic.src=defaultPic;
      alert("Error !! Only "+fileTypes.join(", "));
      }
      setTimeout("applyChanges()",200);
      }
       
      var globalPic;
      function applyChanges(){
      var field=document.getElementById(outImage);
      var x=parseInt(globalPic.width);
      var y=parseInt(globalPic.height);
      if (x>maxWidth) {
      y*=maxWidth/x;
      x=maxWidth;
      }
      if (y>maxHeight) {
      x*=maxHeight/y;
      y=maxHeight;
      }
      field.style.display=(x<1 || y<1)?"none":"";
      field.src=globalPic.src;
      field.width=x;
      field.height=y;
      }
      var loadFile = function(event) {
    var reader = new FileReader();
    reader.onload = function(){
      var output = document.getElementById('output');
      output.src = reader.result;
      
    };
    reader.readAsDataURL(event.target.files[0]);
  };

  
      </script>
  
  
